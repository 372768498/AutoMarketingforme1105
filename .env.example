# Supabase 配置
# 在 https://supabase.com 创建项目后获取
NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Claude API 配置
# 你的中转 Claude API Key
CLAUDE_API_KEY=sk-ant-api03-xxxxx

# OpenAI API 配置（可选/备用）
OPENAI_API_KEY=sk-proj-xxxxx

# Upstash Redis 配置
# 在 https://upstash.com 创建 Redis 数据库后获取
UPSTASH_REDIS_REST_URL=https://xxxxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=AXXXXxxxxx

# N8N Webhook URLs
# 从你的 N8N 实例中获取这些 webhook URLs
N8N_WEBHOOK_URL_PERSONA=http://localhost:5678/webhook/generate-persona
N8N_WEBHOOK_URL_MARKET=http://localhost:5678/webhook/analyze-market
N8N_WEBHOOK_URL_CONTENT=http://localhost:5678/webhook/generate-content

# SerpAPI 配置（可选，用于 SEO 排名追踪）
SERPAPI_API_KEY=xxxxx

# 应用配置
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# API 认证密钥（用于保护内部 API 调用）
API_KEY=your-secret-key-here
